# App
# Environment mode (development/production)
NODE_ENV=development
# Disable Next.js telemetry collection
NEXT_TELEMETRY_DISABLED=1

# Database
# PostgreSQL database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=emailengine
# Full database connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/emailengine

# Redis
# Redis cache server configuration
REDIS_DB=0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Auth
# Base URL for NextAuth authentication (must match your domain in production)
NEXTAUTH_URL=http://localhost:3000
# Secret key for NextAuth session encryption (generate a random string)
NEXTAUTH_SECRET=your-super-secret-key-here

# Rate Limiting
# Maximum number of requests allowed
RATE_LIMIT_MAX=100
# Time window for rate limiting in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# API Keys
# Number of days until API keys expire
API_KEY_EXPIRY_DAYS=90
# Vercel Blob storage access token (get from Vercel dashboard)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token
# Secret key for JWT token generation (generate a random string)
JWT_SECRET=your-super-secret-key-here

# Admin User
# Default administrator account credentials (change in production)
ADMIN_EMAIL=admin@kori.dev
ADMIN_NAME=Admin
ADMIN_PASSWORD=password

# Domain and SSL Configuration
DOMAIN=kori.dev
SERVER_IP=your.server.ip.address

# App URLs
NEXT_PUBLIC_APP_URL=https://kori.dev
NEXT_PUBLIC_API_URL=https://kori.dev/api
